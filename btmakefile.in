#! /bin/bash

help() {
	cat <<EOF
Syntax: btmakefile <arg>

Possible args are:

	--help			Prints this help ;-)
	--path			Returns the path of this executable
	--btmakefile-path	Returns the path of the btmakefile-files
	--version		Returns the version of the package btmakefile
EOF
}

if test "$#" = 0
then
	echo "No arguments given"
	help
	exit 1
fi

while test "$#" != 0
do
	case "$1" in
		--help)
			help
			exit 1
			;;
		
		--path)
			echo @btmakefilepath@
			shift
			;;
		
		--btmakefile-path)
			echo @exepath@
			shift
			;;
		
		--version)
			echo @version@
			shift
			;;
		
		*)
			echo "Unknown argument $1"
			help
			exit 1
			;;
	esac
done
